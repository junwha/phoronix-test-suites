begin_scene
  resolution 1024 1024

#
# A simple scene I constructed to use as a demo for SuperComputing '98
# This scene can be rendered at real-time rates using a medium-sized
# parallel computer.
#

shader_mode full
  ambient_occlusion
    ambient_color  1.0 1.0 1.0
    rescale_direct 0.2
    samples 16
end_shader_mode

camera 
  zoom 1.0
  aspectratio 1.0
  antialiasing 16
  raydepth 5
  center  -25.0 8.0 -15.0
  viewdir   0.5 0.0   0.3
  updir     0.0 1.0   0.0
end_camera

texdef ground
  ambient 0.02 diffuse 0.9 specular 0.0 opacity 1.0
  phong plastic 0.5 phong_size 45.0
  color 0.7 0.6 0.4
  texfunc 0

texdef sculpt1
  ambient 0.1 diffuse 0.6 specular 0.0 opacity 1.0
  phong plastic 0.5 phong_size 45.0
  color 1.0 1.0 1.0
  texfunc 0

texdef sculpt2
  ambient 0.1 diffuse 0.6 specular 0.0 opacity 1.0
  phong plastic 0.5 phong_size 45.0
  color 1.0 1.0 1.0
  texfunc 4
     CENTER 10.0 -200.0 110.3
     ROTATE 0. 0.0 0.0
     SCALE  0.01 0.01 0.01

texdef sculpt3
  ambient 0.1 diffuse 0.6 specular 0.0 opacity 1.0
  phong plastic 0.5 phong_size 445.0
  color 1.0 0.0 0.0
  texfunc 0

texdef sculpt4
  ambient 0.1 diffuse 0.6 specular 0.0 opacity 1.0
  phong plastic 0.5 phong_size 445.0
  color 0.0 1.0 0.0
  texfunc 0

texdef sculpt5
  ambient 0.1 diffuse 0.6 specular 0.0 opacity 1.0
  phong plastic 0.5 phong_size 445.0
  color 0.0 0.0 1.0
  texfunc 0

texdef mirror
  ambient 0.02 diffuse 0.2 specular 0.5 opacity 1.0
  phong metal 0.5 phong_size 45.0
  color 0.3 0.3 1.0
  texfunc 0

texdef boring
  ambient 0.1 diffuse 0.9 specular 0.0 opacity 1.0
  color 1.0 1.0 1.0
  texfunc 0

Light
  center 22.0 22.0 -25.0
  rad 1.0
  color 0.8 0.8 0.8

Light
  center -17.0 32.0 25.0
  rad 1.0
  color 0.8 0.8 0.8

plane 
  center 0.0 0.0 0.0 
  normal 0.0 1.0 0.0
  ground

sphere 
  center -5.0 0.5 5.0
  rad 0.5
  sculpt1

sphere 
  center  5.0 0.5 5.0
  rad 0.5
  sculpt1
  
sphere 
  center -5.0 0.5 -5.0
  rad 0.5
  sculpt1
 
sphere
  center  5.0 0.5 -5.0
  rad 0.5
  sculpt1

fcylinder
  base   -5.0 0.5 5.0
  apex    5.0 0.5 5.0
  rad 0.5
  sculpt1

fcylinder 
  base   -5.0 0.5 -5.0
  apex    5.0 0.5 -5.0
  rad 0.5
  sculpt1
 
