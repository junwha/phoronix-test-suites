  v1   -20.0 12.5  0.0
  v2   -15.0  0.0  5.0     
  sculpt3

tri 
  v0  -25.0  0.0 -5.0
  v1  -20.0 12.5  0.0
  v2  -25.0  0.0  5.0     
  sculpt3

tri 
  v0  -15.0  0.0 -5.0
  v1  -20.0 12.5  0.0
  v2  -25.0  0.0 -5.0     
  sculpt3

tri 
  v0  -15.0  0.0  5.0
  v1  -20.0 12.5  0.0
  v2  -25.0  0.0  5.0     
  sculpt3




tri 
  v0    5.0  0.0  15.0
  v1    0.0 12.5  20.0
  v2    5.0  0.0  25.0     
  sculpt4

tri 
  v0   -5.0  0.0  15.0
  v1    0.0 12.5  20.0
  v2   -5.0  0.0  25.0     
  sculpt4

