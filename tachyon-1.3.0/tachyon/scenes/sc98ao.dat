  center -10.0 2.5 10.0
  rad    2.5 
  texture
  ambient 0.02 diffuse 0.9 specular 0.0 opacity 1.0
  color 1.0 1.0 1.0
  texfunc 7 imaps/burgn.ppm
    center -10.0 2.5 10.0
    rotate 0.0 0.0 0.0
