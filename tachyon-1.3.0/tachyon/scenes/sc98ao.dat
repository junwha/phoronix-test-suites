  apex   -5.0 0.5  5.0
  rad 0.5
  sculpt1

fcylinder
  base    5.0 0.5 -5.0
  apex    5.0 0.5  5.0
  rad 0.5
  sculpt1

fcylinder
  base   -5.0 0.5 -5.0
  apex    0.0 8.5  0.0
  rad 0.5
  sculpt1

fcylinder
  base    5.0 0.5 -5.0
  apex    0.0 8.5  0.0
