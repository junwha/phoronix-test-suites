sphere 
  center  0.0 8.5 0.0
  rad     4.0
  mirror

ring
  center  0.0 0.1 10.0 
  normal  0.0 1.0 0.0
  inner   1.0
  outer   4.0
  mirror

ring
  center  0.0 0.1 -10.0 
  normal  0.0 1.0  0.0
  inner   1.0
  outer   4.0
  mirror

ring
  center  10.0 0.1 0.0 
  normal  0.0 1.0 0.0
  inner   1.0
  outer   4.0
  mirror

ring
  center -10.0 0.1 0.0 
  normal  0.0 1.0 0.0
  inner   1.0
  outer   4.0
  mirror

tri 
  v0   15.0  0.0 -5.0
  v1   20.0 12.5  0.0
  v2   15.0  0.0  5.0     
  sculpt2

tri 
  v0   25.0  0.0 -5.0
  v1   20.0 12.5  0.0
  v2   25.0  0.0  5.0     
